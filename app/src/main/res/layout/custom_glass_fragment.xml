<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content_linearlayout_tuychinh"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/image_button_back_custom"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_back"
                app:layout_constraintLeft_toLeftOf="parent"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Tùy chỉnh cốc"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_cup_tuychinh"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/ic_cupthree"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_linearlayout_tuychinh" />

        <EditText
            android:id="@+id/edt_nhapsoluong"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#FFFFFF"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_cup_tuychinh" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginRight="52dp"
            android:text="ml"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/edt_nhapsoluong"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_cup_tuychinh" />

        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:background="@drawable/custom_edittext"
            android:text="Xác nhận"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_nhapsoluong"

            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>