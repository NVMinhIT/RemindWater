<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_dot1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_dots"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title"

        />

    <TextView
        android:id="@+id/txt_hours1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_btn_dot1"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <ImageButton
        android:id="@+id/img_btn_dot3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_dots"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_btn_dot2"

        />

    <TextView
        android:id="@+id/txt_hours3"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_btn_dot3"
        app:layout_constraintTop_toBottomOf="@+id/txt_hours2" />

    <ImageButton
        android:id="@+id/img_btn_dot4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_dots"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_btn_dot3"

        />

    <TextView
        android:id="@+id/txt_hours4"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_btn_dot4"
        app:layout_constraintTop_toBottomOf="@+id/txt_hours3" />

    <ImageButton
        android:id="@+id/img_btn_dot2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_dots"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_btn_dot1"

        />

    <TextView
        android:id="@+id/txt_hours2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_btn_dot2"
        app:layout_constraintTop_toBottomOf="@+id/txt_hours1" />

</android.support.constraint.ConstraintLayout>